{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Userid</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>Loginuser</th>
                <td>{{ user.loginUser }}</td>
            </tr>
            <tr>
                <th>Numdocuser</th>
                <td>{{ user.numDocUser }}</td>
            </tr>
            <tr>
                <th>Typedocuser</th>
                <td>{{ user.typeDocUser }}</td>
            </tr>
            <tr>
                <th>Passuser</th>
                <td>{{ user.passUser }}</td>
            </tr>
            <tr>
                <th>Emailuser</th>
                <td>{{ user.emailUser }}</td>
            </tr>
            <tr>
                <th>Flastnameuser</th>
                <td>{{ user.flastNameUser }}</td>
            </tr>
            <tr>
                <th>Slastnameuser</th>
                <td>{{ user.slastNameUser }}</td>
            </tr>
            <tr>
                <th>Nameuser</th>
                <td>{{ user.nameUser }}</td>
            </tr>
            <tr>
                <th>Midnameuser</th>
                <td>{{ user.midNameUser }}</td>
            </tr>
            <tr>
                <th>Statususer</th>
                <td>{{ user.statusUser }}</td>
            </tr>
            <tr>
                <th>Useridcreate</th>
                <td>{{ user.userIdCreate }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{% if user.dateCreated %}{{ user.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ums_sec_users_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ums_sec_users_edit', { 'id': user.userId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
