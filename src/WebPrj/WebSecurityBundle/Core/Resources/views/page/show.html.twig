    <table>
        <tbody>
            <tr>
                <th>Pageid</th>
                <td>{{ page.pageId }}</td>
            </tr>
            <tr>
                <th>Namepage</th>
                <td>{{ page.namePage }}</td>
            </tr>
            <tr>
                <th>Strnamepage</th>
