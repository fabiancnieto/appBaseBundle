{% extends 'base.html.twig' %}

{% block body %}
    <h1>Action</h1>

    <table>
        <tbody>
            <tr>
                <th>Actionid</th>
                <td>{{ action.actionId }}</td>
            </tr>
            <tr>
                <th>Nameaction</th>
                <td>{{ action.nameAction }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ums_sec_actions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ums_sec_actions_edit', { 'id': action.actionId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
